<web-app>

	<welcome-file-list>
		<welcome-file>/WEB-INF/jsp/login.jsp</welcome-file>
	</welcome-file-list>


	<filter>
        <filter-name>authenticatefilter</filter-name>
        <filter-class>test1.AuthenticateFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>authenticatefilter</filter-name>
        <url-pattern>/</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>


	<servlet>
		<servlet-name>FrontServlet</servlet-name>
		<servlet-class>test1.FrontServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FrontServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>FollowCheckAjaxServlet</servlet-name>
		<servlet-class>test1.FollowCheckAjaxServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FollowCheckAjaxServlet</servlet-name>
		<url-pattern>/FollowCheckAjaxServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>FollowAjaxServlet</servlet-name>
		<servlet-class>test1.FollowAjaxServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FollowAjaxServlet</servlet-name>
		<url-pattern>/FollowAjaxServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>FollowCancelAjaxServlet</servlet-name>
		<servlet-class>test1.FollowCancelAjaxServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FollowCancelAjaxServlet</servlet-name>
		<url-pattern>/FollowCancelAjaxServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>test1.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>



</web-app>
